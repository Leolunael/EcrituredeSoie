{% extends 'base.html.twig' %}

{% block title %}Mon Tableau de Bord - Permanent{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Bienvenue {{ permanent.prenom }} {{ permanent.nom }},</h1>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mes Informations</h5>
                        <p><strong>Email :</strong> {{ permanent.email }}</p>
                        <p><strong>Téléphone :</strong> {{ permanent.telephone }}</p>
                        <p><strong>Inscrit le :</strong> {{ permanent.dateInscription|date('d/m/Y') }}</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Statut du Paiement</h5>
                        {% if permanent.paiementEffectue %}
                            <span class="badge bg-success">✓ Paiement effectué</span>
                            <p class="mt-2">Le {{ permanent.datePaiement|date('d/m/Y') }}</p>
                        {% else %}
                            <span class="badge bg-danger">⚠ En attente</span>
                            <p class="mt-2">Veuillez effectuer votre paiement</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Statut du Compte</h5>
                        {% if permanent.actif %}
                            <span class="badge bg-success">✓ Actif</span>
                        {% else %}
                            <span class="badge bg-secondary">Inactif</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Liste des inscriptions #}
        <div class="card">
            <div class="card-header bg-success">
                <h5 style="color: white;">
                    <i class="bi bi-calendar-check"></i>
                    Mes inscriptions ({{ inscriptions|length }})
                </h5>
            </div>
            <div class="card-body">
                {% if inscriptions is empty %}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        Vous n'avez encore aucune inscription.
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Type</th>
                                <th>Date d'inscription</th>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Moyen de paiement</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in inscriptions %}
                                <tr>
                                    <td>
                                        {% if item.type == 'Atelier' %}
                                            <span class="badge bg-primary">Atelier</span>
                                        {% elseif item.type == 'Visio' %}
                                            <span class="badge bg-info">Visio</span>
                                        {% else %}
                                            <span class="badge bg-warning">Lettre</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ item.date|date('d/m/Y à H:i') }}</td>
                                    <td>{{ item.inscription.name }} {{ item.inscription.prenom }}</td>
                                    <td>{{ item.inscription.email }}</td>
                                    <td>
                                        {% if item.inscription.moyenPaiement == 'cheque' %}
                                            Chèque
                                        {% elseif item.inscription.moyenPaiement == 'especes' %}
                                            Espèces
                                        {% else %}
                                            Carte Bancaire
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if item.type == 'Atelier' %}
                                            <a href="{{ path('permanent_inscription_detail', {type: 'atelier', id: item.inscription.id}) }}"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-eye"></i> Voir
                                            </a>
                                        {% elseif item.type == 'Visio' %}
                                            <a href="{{ path('permanent_inscription_detail', {type: 'visio', id: item.inscription.id}) }}"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-eye"></i> Voir
                                            </a>
                                        {% else %}
                                            <a href="{{ path('permanent_inscription_detail', {type: 'lettre', id: item.inscription.id}) }}"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-eye"></i> Voir
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="mt-4">
            <h3>Mes Actions</h3>
            <div class="card">
                <div class="card-body">
                    <a href="{{ path('permanent_profil') }}" class="btn btn-primary w-100" style="margin-bottom: 1rem;">
                        <i class="bi bi-pencil-square"></i> Modifier mes informations
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
