{% extends 'base.html.twig' %}

{% block title %}Mon Profil - Permanent{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="mb-4">
                    <a href="{{ path('permanent_dashboard') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour au tableau de bord
                    </a>
                </div>

                <div class="card">
                    <div class="card-header bg-primary">
                        <h4 style="color: white;">
                            <i class="bi bi-person-circle"></i> Modifier mes informations
                        </h4>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle"></i> {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle"></i> {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle"></i>
                            <strong>Informations actuelles</strong>
                            <ul class="mb-0 mt-2">
                                <li><strong>Nom :</strong> {{ permanent.nom }}</li>
                                <li><strong>Prénom :</strong> {{ permanent.prenom }}</li>
                                <li><strong>Email :</strong> {{ permanent.email }}</li>
                                <li><strong>Téléphone :</strong> {{ permanent.telephone ?? 'Non renseigné' }}</li>
                            </ul>
                        </div>

                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.nom) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.prenom) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.telephone) }}
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Enregistrer les modifications
                            </button>
                            <a href="{{ path('permanent_dashboard') }}" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header bg-warning">
                        <h5 style="color: white;">
                            <i class="bi bi-shield-lock"></i> Informations de sécurité
                        </h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Inscrit le :</strong> {{ permanent.dateInscription|date('d/m/Y à H:i') }}</p>
                        <p><strong>Statut du paiement :</strong>
                            {% if permanent.paiementEffectue %}
                                <span class="badge bg-success">✓ Paiement effectué</span>
                            {% else %}
                                <span class="badge bg-danger">⚠ En attente</span>
                            {% endif %}
                        </p>
                        <p><strong>Compte actif :</strong>
                            {% if permanent.actif %}
                                <span class="badge bg-success">✓ Oui</span>
                            {% else %}
                                <span class="badge bg-secondary">Non</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
