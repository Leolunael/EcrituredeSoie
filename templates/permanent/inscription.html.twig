{% extends 'base.html.twig' %}

{% block title %}Inscription Permanent{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary">
                        <h3>Inscription Espace Permanent</h3>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}

                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.nom) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.prenom) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.telephone) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.password.first, 'Mot de passe') }}
                            <div class="password-container">
                                {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'id': 'password-first'}}) }}
                                <button type="button" class="password-toggle" data-target="password-first">
                                    <svg id="icon-password-first" viewBox="0 0 24 24">
                                        <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                    </svg>
                                </button>
                            </div>
                            {{ form_errors(form.password.first) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.password.second, 'Confirmer le mot de passe') }}
                            <div class="password-container">
                                {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'id': 'password-second'}}) }}
                                <button type="button" class="password-toggle" data-target="password-second">
                                    <svg id="icon-password-second" viewBox="0 0 24 24">
                                        <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                    </svg>
                                </button>
                            </div>
                            {{ form_errors(form.password.second) }}
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-exclamation-triangle"></i>
                            Après validation, vous serez redirigé vers HelloAsso pour régler l'adhésion de 50€.
                        </div>

                        <div>
                            <button type="submit" class="btn btn-lg w-100" style="margin-bottom: 1rem;">
                                <i class="fas fa-arrow-right"></i> S'inscrire et payer
                            </button>

                            <a href="{{ path('app_permanent_accueil') }}" class="btn btn-secondary w-100">
                                Retour
                            </a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
