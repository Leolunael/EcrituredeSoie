{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Posts{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-newspaper me-2"></i> Gestion des Posts</h1>
            <div>
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i> Retour au tableau de bord
                </a>
                <a href="{{ path('admin_post_new') }}" class="btn btn-success">
                    <i class="fas fa-plus me-1"></i> Nouveau post
                </a>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <div class="card shadow">
            <div class="card-body">
                {% if posts is empty %}
                    <p class="text-muted text-center py-5">
                        <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                        Aucun post pour le moment.
                    </p>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                            <tr>
                                <th>Titre</th>
                                <th>Auteur</th>
                                <th>Date de création</th>
                                <th>Commentaires</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for post in posts %}
                                <tr>
                                    <td>
                                        <strong>{{ post.titre }}</strong>
                                    </td>
                                    <td>{{ post.auteurNom }}</td>
                                    <td>{{ post.dateCreation ? post.dateCreation|date('d/m/Y H:i') : 'N/A' }}</td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            {{ post.commentaires|length }}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('admin_post_show', {id: post.id}) }}"
                                               class="btn btn-sm btn-info"
                                               title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_post_edit', {id: post.id}) }}"
                                               class="btn btn-sm btn-warning"
                                               title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="{{ path('admin_post_delete', {id: post.id}) }}"
                                                  method="post"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?')">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
