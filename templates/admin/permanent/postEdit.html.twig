{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le post{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-edit me-2"></i> Modifier le post</h1>
            <div>
                <a href="{{ path('admin_post_show', {id: post.id}) }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour
                </a>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <div class="card shadow">
            <div class="card-body">
                <form method="post" action="{{ path('admin_post_edit', {id: post.id}) }}">
                    <div class="mb-3">
                        <label for="titre" class="form-label">Titre <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control"
                               id="titre"
                               name="titre"
                               value="{{ post.titre }}"
                               required
                               placeholder="Entrez le titre du post">
                    </div>

                    <div class="mb-3">
                        <label for="contenu" class="form-label">Contenu <span class="text-danger">*</span></label>
                        <textarea class="form-control"
                                  id="contenu"
                                  name="contenu"
                                  rows="15"
                                  required
                                  placeholder="Écrivez le contenu du post...">{{ post.contenu }}</textarea>
                    </div>

                    <div class="alert alert-info">
                        <small>
                            <i class="fas fa-info-circle me-1"></i>
                            <strong>Créé le:</strong> {{ post.dateCreation ? post.dateCreation|date('d/m/Y à H:i') : 'N/A' }}
                            <br>
                            <strong>Dernière modification:</strong> {{ post.dateModification ? post.dateModification|date('d/m/Y à H:i') : 'N/A' }}
                        </small>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('admin_post_show', {id: post.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i> Enregistrer les modifications
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
