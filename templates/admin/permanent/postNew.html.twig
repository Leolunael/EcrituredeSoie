{% extends 'admin/base.html.twig' %}

{% block title %}Nouveau post{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-plus-circle me-2"></i> Créer un nouveau post</h1>
            <div>
                <a href="{{ path('admin_post_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <div class="card shadow">
            <div class="card-body">
                <form method="post" action="{{ path('admin_post_new') }}" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="titre" class="form-label">Titre <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control"
                               id="titre"
                               name="titre"
                               required
                               placeholder="Entrez le titre du post"
                               autofocus>
                        <div class="form-text">Le titre doit être clair et descriptif</div>
                    </div>

                    <div class="mb-3">
                        <label for="contenu" class="form-label">Contenu <span class="text-danger">*</span></label>
                        <textarea class="form-control"
                                  id="contenu"
                                  name="contenu"
                                  rows="15"
                                  required
                                  placeholder="Écrivez le contenu du post..."></textarea>
                        <div class="form-text">Rédigez le contenu complet de votre post</div>
                    </div>

                    <hr class="my-4">

                    <h5 class="mb-3"><i class="fas fa-paperclip me-2"></i>Fichiers joints (optionnels)</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="imageFile" class="form-label">
                                <i class="fas fa-image me-1"></i> Image
                            </label>
                            <input type="file"
                                   class="form-control"
                                   id="imageFile"
                                   name="imageFile"
                                   accept="image/*">
                            <div class="form-text">Formats acceptés : JPG, PNG, GIF, WebP (max 5MB)</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="pdfFile" class="form-label">
                                <i class="fas fa-file-pdf me-1"></i> Document PDF
                            </label>
                            <input type="file"
                                   class="form-control"
                                   id="pdfFile"
                                   name="pdfFile"
                                   accept="application/pdf">
                            <div class="form-text">Format PDF uniquement</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="videoFile" class="form-label">
                                <i class="fas fa-video me-1"></i> Vidéo
                            </label>
                            <input type="file"
                                   class="form-control"
                                   id="videoFile"
                                   name="videoFile"
                                   accept="video/*">
                            <div class="form-text">Formats acceptés : MP4, MPEG, MOV, AVI (max 50MB)</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="audioFile" class="form-label">
                                <i class="fas fa-music me-1"></i> Audio/Musique
                            </label>
                            <input type="file"
                                   class="form-control"
                                   id="audioFile"
                                   name="audioFile"
                                   accept="audio/*">
                            <div class="form-text">Formats acceptés : MP3, WAV, OGG (max 20MB)</div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Note:</strong> Le post sera créé avec votre nom d'utilisateur comme auteur et la date actuelle.
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('admin_post_index') }}" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i> Créer le post
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
