{% extends 'admin/base.html.twig' %}

{% block title %}{{ post.titre }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-newspaper me-2"></i> Détails du post</h1>
            <div>
                <a href="{{ path('admin_post_index') }}" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
                <a href="{{ path('admin_post_edit', {id: post.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit me-1"></i> Modifier
                </a>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {# Informations du post #}
        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">{{ post.titre }}</h3>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p class="mb-2">
                            <i class="fas fa-user me-2 text-muted"></i>
                            <strong>Auteur:</strong> {{ post.auteurNom }}
                        </p>
                        <p class="mb-2">
                            <i class="fas fa-calendar-plus me-2 text-muted"></i>
                            <strong>Créé le:</strong> {{ post.dateCreation ? post.dateCreation|date('d/m/Y à H:i') : 'N/A' }}
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2">
                            <i class="fas fa-calendar-edit me-2 text-muted"></i>
                            <strong>Dernière modification:</strong> {{ post.dateModification ? post.dateModification|date('d/m/Y à H:i') : 'N/A' }}
                        </p>
                        <p class="mb-2">
                            <i class="fas fa-comments me-2 text-muted"></i>
                            <strong>Commentaires:</strong>
                            <span class="badge bg-secondary">{{ post.commentaires|length }}</span>
                        </p>
                    </div>
                </div>

                <hr>

                <div class="post-content">
                    <h5 class="mb-3">Contenu:</h5>
                    <div class="bg-light p-4 rounded">
                        {{ post.contenu|nl2br }}
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form action="{{ path('admin_post_delete', {id: post.id}) }}"
                      method="post"
                      class="d-inline"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce post et tous ses commentaires ?')">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Supprimer le post
                    </button>
                </form>
            </div>
        </div>

        {# Section des commentaires #}
        <div class="card shadow">
            <div class="card-header bg-light">
                <h4 class="mb-0">
                    <i class="fas fa-comments me-2"></i>
                    Commentaires ({{ post.commentaires|length }})
                </h4>
            </div>
            <div class="card-body">
                {% if post.commentaires is empty %}
                    <p class="text-muted text-center py-4">
                        <i class="fas fa-inbox fa-2x mb-3 d-block"></i>
                        Aucun commentaire pour ce post.
                    </p>
                {% else %}
                    <div class="list-group">
                        {% for commentaire in post.commentaires %}
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1">
                                            <i class="fas fa-user-circle me-1"></i>
                                            {{ commentaire.auteurNom }}
                                        </h6>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            {{ commentaire.dateCreation ? commentaire.dateCreation|date('d/m/Y à H:i') : 'N/A' }}
                                        </small>
                                    </div>
                                    <form action="{{ path('admin_post_comment_delete', {postId: post.id, commentId: commentaire.id}) }}"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-comment' ~ commentaire.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                                <p class="mb-0">{{ commentaire.contenu }}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
