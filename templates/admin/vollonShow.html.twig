{% extends 'admin/base.html.twig' %}

{% block title %}Ecriture de Soie{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-calendar-event"></i> {{ vollon.titre }}</h1>
            <div>
                <button onclick="window.print()" class="btn btn-success me-2">
                    <i class="bi bi-printer"></i> Imprimer
                </button>
                <a href="{{ path('admin_vollon_list') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour √† la liste
                </a>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Informations de l'atelier</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Date :</strong> {{ atelier.dateVollon|date('d/m/Y') }}
                            {% if vollon.heureDebut %}
                                de {{ vollon.heureDebut|date('H\\hi') }}
                            {% endif %}
                            {% if vollon.heureFin %}
                                √† {{ vollon.heureFin|date('H\\hi') }}
                            {% endif %}
                        </p>
                        <p><strong>Description :</strong> {{ vollon.description }}</p>
                        <p><strong>Nombre d'inscrits :</strong> {{ vollon.inscriptions|length }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-people"></i> Liste des inscrits
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if vollon.inscriptions is empty %}
                            <p class="text-muted">Aucun inscrit pour le moment.</p>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                    <tr>
                                        <th>Nom</th>
                                        <th>Pr√©nom</th>
                                        <th>Email</th>
                                        <th>T√©l√©phone</th>
                                        <th>R√®glement</th>
                                        <th class="no-print">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for inscription in vollon.inscriptions %}
                                        <tr>
                                            <td>{{ inscription.name }}</td>
                                            <td>{{ inscription.prenom }}</td>
                                            <td>{{ inscription.email }}</td>
                                            <td>{{ inscription.telephone ?? '-' }}</td>
                                            <td>
                                                {% if inscription.moyenPaiement == 'cheque' %}
                                                    <i class="bi bi-wallet2 text-info"></i> Ch√®que
                                                {% elseif inscription.moyenPaiement == 'especes' %}
                                                    <i class="bi bi-cash text-success"></i> Esp√®ces
                                                {% elseif inscription.moyenPaiement == 'cb' %}
                                                    <i class="bi bi-credit-card text-primary"></i> CB (HelloAsso)
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_inscription_edit', {id: inscription.id}) }}"
                                                       class="btn btn-sm btn-warning" title="Modifier">
                                                        ‚úèÔ∏è
                                                    </a>
                                                    <form method="post"
                                                          action="{{ path('admin_inscription_delete', {id: inscription.id}) }}"
                                                          style="display: inline;"
                                                          onsubmit="return confirm('Supprimer cette inscription ?')">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ inscription.id) }}">
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                                            üóëÔ∏è
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
