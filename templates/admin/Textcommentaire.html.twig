{% extends 'admin/base.html.twig' %}

{% block title %}Administration - Commentaires{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Gestion des commentaires</h1>
            <a href="{{ path('admin_texte') }}" class="btn btn-secondary">
                ‚Üê Retour aux textes
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% if commentaires is empty %}
            <div class="alert alert-info">
                Aucun commentaire pour le moment.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-dark">
                    <tr>
                        <th>Type</th>
                        <th>Auteur</th>
                        <th>Commentaire</th>
                        <th>Date</th>
                        <th>Texte associ√©</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for commentaire in commentaires %}
                        <tr>
                            <td>
                                {% if commentaire.isReponse %}
                                    <span class="badge bg-info">R√©ponse</span>
                                {% else %}
                                    <span class="badge bg-primary">Commentaire</span>
                                {% endif %}
                            </td>
                            <td>
                                <strong>{{ commentaire.auteur }}</strong>
                            </td>
                            <td>
                                <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">
                                    {{ commentaire.contenu|length > 100 ?
                                    commentaire.contenu|slice(0, 100) ~ '...' :
                                    commentaire.contenu }}
                                </div>
                            </td>
                            <td>
                                <small>{{ commentaire.dateCreation|date('d/m/Y H:i') }}</small>
                            </td>
                            <td>
                                <a href="{{ path('app_texte_detail', {id: commentaire.texteId}) }}"
                                   target="_blank"
                                   class="btn btn-sm btn-outline-primary">
                                    Voir le texte
                                </a>
                            </td>
                            <td>
                                <form action="{{ path('app_admin_commentaire_supprimer', {id: commentaire.id}) }}"
                                      method="post"
                                      onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce commentaire ?{% if not commentaire.isReponse %} Cela supprimera aussi toutes les r√©ponses associ√©es.{% endif %}')"
                                      style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        üóëÔ∏è Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="alert alert-warning mt-4">
                <strong>‚ö†Ô∏è Attention :</strong> La suppression d'un commentaire principal supprimera √©galement toutes ses r√©ponses.
            </div>
        {% endif %}
    </div>
{% endblock %}
