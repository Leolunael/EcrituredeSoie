{% extends 'admin/base.html.twig' %}


{% block title %}Liste des utilisateurs inscrits{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Utilisateurs inscrits</h1>

        {% if users is empty %}
            <div class="alert alert-info">
                <p>Aucun utilisateur inscrit pour le moment.</p>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Rôles</th>
                        <th>Vérifié</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.nom }}</td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge bg-secondary">{{ role }}</span>
                                {% endfor %}
                            </td>
                            <td>
                                {% if user.isVerified %}
                                    <span class="badge bg-success">✓ Vérifié</span>
                                {% else %}
                                    <span class="badge bg-warning">✗ Non vérifié</span>
                                {% endif %}
                            </td>
                            <td>
                                {# Ajoutez vos actions ici selon vos besoins #}
                                <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-sm btn-primary">Voir</a>
                                <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <p class="text-muted">Total : {{ users|length }} utilisateur(s)</p>
        {% endif %}

        <a href="{{ path('admin_index') }}" class="btn btn-secondary mt-3">Retour au tableau de bord</a>
    </div>
{% endblock %}
