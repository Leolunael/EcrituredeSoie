{% extends 'admin/base.html.twig' %}

{% block title %}Nouvelle Inscription - Administration{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-person-plus"></i> Ajouter un inscrit</h1>
            <a href="{{ path('admin_atelier_show', {id: atelier.id}) }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour Ã  l'atelier
            </a>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Atelier : {{ atelier.titre }}</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Date :</strong> {{ atelier.dateAtelier|date('d/m/Y H:i') }}</p>
                        <p><strong>Lieu :</strong> {{ atelier.lieu }}</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Informations de l'inscrit</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.nom) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.prenom) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.telephone) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.commentaire) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('admin_atelier_show', {id: atelier.id}) }}" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Ajouter l'inscription
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
