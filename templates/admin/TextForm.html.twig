{% extends 'admin/base.html.twig' %}

{% block title %}{{ texte and texte.id ? 'Modifier' : 'Nouveau' }} texte{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ texte.id ? 'Modifier le texte' : 'Nouveau texte' }}</h1>

        <div class="row">
            <div class="col-md-8">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_row(form.titre) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.auteur) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.contenu) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.imageFile) }}
                    {% if texte.image %}
                        <div class="mt-2">
                            <small class="text-muted">Image actuelle :</small><br>
                            <img src="{{ asset('uploads/textes/' ~ texte.image) }}"
                                 alt="Image actuelle"
                                 style="max-width: 200px; max-height: 200px;"
                                 class="img-thumbnail">
                        </div>
                    {% endif %}
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            {{ form_widget(form.publie) }}
                            {{ form_label(form.publie) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            {{ form_widget(form.aLaUne) }}
                            {{ form_label(form.aLaUne) }}
                        </div>
                        <small class="text-muted">
                            Note : Mettre ce texte à la une retirera automatiquement les autres textes de la une.
                        </small>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        {{ texte.id ? 'Modifier' : 'Créer' }}
                    </button>
                    <a href="{{ path('admin_texte') }}" class="btn btn-secondary">
                        Annuler
                    </a>
                </div>
                {{ form_end(form) }}
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Aide</h5>
                    </div>
                    <div class="card-body">
                        <h6>À la une</h6>
                        <p class="small">Le texte marqué "À la une" sera affiché en priorité sur la page d'accueil.</p>

                        <h6>Publié</h6>
                        <p class="small">Seuls les textes publiés sont visibles par les visiteurs.</p>

                        <h6>Formatage</h6>
                        <p class="small">Les sauts de ligne sont automatiquement respectés dans l'affichage.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
