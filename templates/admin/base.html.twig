<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Administration{% endblock %}</title>

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {# CSS Icons #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {% block stylesheets %}
        <style>
            body {
                background-color: #f8f9fa;
            }
            .navbar-brand {
                font-weight: bold;
            }
            .sidebar {
                min-height: calc(100vh - 56px);
                background-color: #343a40;
            }
            .sidebar .nav-link {
                color: #adb5bd;
                padding: 0.75rem 1rem;
                border-left: 3px solid transparent;
            }
            .sidebar .nav-link:hover {
                color: #fff;
                background-color: #495057;
                border-left-color: #007bff;
            }
            .sidebar .nav-link.active {
                color: #fff;
                background-color: #495057;
                border-left-color: #007bff;
            }
            .card {
                box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
                border: none;
            }
            .table-hover tbody tr:hover {
                background-color: rgba(0,0,0,0.02);
            }
        </style>
    {% endblock %}
</head>
<body>
{# Navbar #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('admin_index') }}">
            <i class="bi bi-speedometer2"></i> Administration
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}" target="_blank">
                        <i class="bi bi-box-arrow-up-right"></i> Voir le site
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i> {{ app.user.email }}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                <i class="bi bi-box-arrow-right"></i> DÃ©connexion
                            </a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        {# Sidebar #}
        <nav class="col-md-2 d-md-block sidebar py-3 px-0">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_index' %}active{% endif %}"
                           href="{{ path('admin_index') }}">
                            <i class="bi bi-speedometer2"></i> Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <small class="text-muted px-3">GESTION</small>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_avis' %}active{% endif %}"
                           href="{{ path('admin_avisList') }}">
                            <i class="bi bi-star-fill"></i> Avis
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_contact' %}active{% endif %}"
                           href="{{ path('admin_contactList') }}">
                            <i class="bi bi-envelope-fill"></i> Contacts
                        </a>
                    </li>
{#                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_atelier' %}active{% endif %}"
                           href="{{ path('admin_adminAtelier') }}">
                            <i class="bi bi-calendar-event"></i> Ateliers
                        </a>
                    </li>#}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin' %}active{% endif %}"
                           href="{{ path('admin_texte') }}">
                            <i class="bi bi-file-text-fill"></i> Textes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_information') }}">
                            Carrousel d'informations
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        {# Main content #}
        <main class="col-md-10 ms-sm-auto px-md-4">
            {# Flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show mt-3" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Page content #}
            {% block body %}{% endblock %}
        </main>
    </div>
</div>

{# Bootstrap JS #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
