{% extends 'admin/base.html.twig' %}

{% block title %}Modifier Visio - Administration{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-pencil-square"></i> Modifier la visio</h1>
            <a href="{{ path('admin_gestion') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>

        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">Informations de la visio</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                {{ form_row(form.titre) }}
                            </div>
                            <div class="col-md-4 mb-3">
                                {{ form_row(form.isArchive) }}
                            </div>
                        </div>

                        {# ✅ SIMPLIFIÉ : Utilisation directe des champs Symfony #}
                        <div class="mb-3">
                            <label class="form-label">Date et horaires</label>
                            <div class="row">
                                <div class="col-md-4">
                                    {{ form_widget(form.dateVisio, {'attr': {'class': 'form-control'}}) }}
                                    <small class="form-text text-muted">Date</small>
                                    {{ form_errors(form.dateVisio) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_widget(form.heureDebut, {'attr': {'class': 'form-control'}}) }}
                                    <small class="form-text text-muted">Heure de début</small>
                                    {{ form_errors(form.heureDebut) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_widget(form.heureFin, {'attr': {'class': 'form-control'}}) }}
                                    <small class="form-text text-muted">Heure de fin</small>
                                    {{ form_errors(form.heureFin) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.placesMax) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.prix) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.description) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.informations) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.lienHelloAsso) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('admin_gestion') }}" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Enregistrer les modifications
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
