{% extends 'admin/base.html.twig' %}

{% block title %}Répondre à l'avis{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-md-12">
            <h1>Répondre à l'avis</h1>
            <a href="{{ path('admin_avisList') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Colonne de gauche : Avis client -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-chat-left-quote"></i> Avis du client
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Auteur :</strong> {{ avis.nom }}
                    </div>
                    <div class="mb-3">
                        <strong>Email :</strong> {{ avis.email }}
                    </div>

                    <div class="mb-3">
                        <strong>Note :</strong>
                        <div class="text-warning fs-5">
                            {% for i in 1..5 %}
                                {% if i <= avis.note %}
                                    ✏️
                                {% else %}
                                    <span style="opacity: 0.3;">✏️</span>
                                {% endif %}
                            {% endfor %}
                            <span class="text-muted">({{ avis.note }}/5)</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Date :</strong> {{ avis.dateCreation|date('d/m/Y à H:i') }}
                    </div>

                    <div class="mb-3">
                        <strong>Statut :</strong>
                        {% if avis.approuve %}
                            <span class="badge bg-success">Validé</span>
                        {% else %}
                            <span class="badge bg-warning">En attente</span>
                        {% endif %}
                    </div>

                    <hr>

                    <div>
                        <strong>Commentaire :</strong>
                        <div class="mt-2 p-3 bg-light rounded">
                            {{ avis.commentaire }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Réponse existante si elle existe -->
            {% if avis.hasReponse %}
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-reply"></i> Votre réponse actuelle
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <small class="text-muted">
                                Par {{ avis.auteurReponse }} le {{ avis.dateReponse|date('d/m/Y à H:i') }}
                            </small>
                        </div>
                        <div class="p-3 bg-light rounded">
                            {{ avis.reponse }}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Colonne de droite : Formulaire de réponse -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil"></i>
                        {% if avis.hasReponse %}
                            Modifier votre réponse
                        {% else %}
                            Rédiger votre réponse
                        {% endif %}
                    </h5>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_row(form.reponse, {
                            'label': 'Votre réponse',
                            'attr': {
                                'rows': 10,
                                'placeholder': 'Merci pour votre avis ! Nous sommes ravis que...'
                            }
                        }) }}
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Conseil :</strong> Personnalisez votre réponse et montrez votre reconnaissance envers le client.
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-circle"></i>
                            {% if avis.hasReponse %}
                                Mettre à jour la réponse
                            {% else %}
                                Publier la réponse
                            {% endif %}
                        </button>

                        {% if avis.hasReponse %}
                            <button type="submit" name="delete_response" value="1" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Supprimer la réponse
                            </button>
                        {% endif %}

                        <a href="{{ path('admin_avisList') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
