{% extends 'admin/base.html.twig' %}

{% block title %}Ecriture de Soie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Gestion du contenu de la page d'accueil</h1>

        <a href="{{ path('admin_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Tableau de bord principal
        </a>

        <a href="{{ path('admin_introForm') }}" class="btn btn-primary">
            Nouvelle information
        </a>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Image</th>
                    <th>Actif</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for intro in intros %}
                    <tr>
                        <td>{{ intro.titre }}</td>
                        <td>
                            {% if intro.image %}
                                <img src="{{ asset('uploads/informations/' ~ intro.image) }}"
                                     alt="{{ intro.titre }}"
                                     style="max-width: 100px;">
                            {% else %}
                                <span class="text-muted">Aucune image</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if intro.actif %}
                                <span class="badge bg-success">Oui</span>
                            {% else %}
                                <span class="badge bg-secondary">Non</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_intro_modifier', {id: intro.id}) }}"
                               class="btn btn-sm btn-warning">Modifier</a>
                            <form method="post"
                                  action="{{ path('app_admin_intro_supprimer', {id: intro.id}) }}"
                                  style="display: inline;"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette information ?');">
                                <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune information pour le moment</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
