                    <a href="mailto:{{ form.email }}?subject=Re: {{ form.subject|url_encode }}"
                       class="btn btn-primary">
                        üìß R√©pondre par email
                    </a>

                    <form action="{{ path('app_admin_message_supprimer', {id: message.id}) }}"
                          method="post"
                          style="display: inline;">
                        <button type="submit" class="btn btn-danger">
                            üóëÔ∏è Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
