        <div class="card">
            <div class="card-header">
                <div>
                    <h5>{{ form.subject ?? 'Sans sujet' }}</h5>
                </div>
                <div>
                    {% if not message.lu %}
                        <span class="badge bg-primary">Non lu</span>
                    {% endif %}
                    {% if not message.traite %}
                        <span class="badge bg-warning text-dark">√Ä traiter</span>
                    {% else %}
                        <span class="badge bg-success">Trait√©</span>
                    {% endif %}
                </div>
            </div>
