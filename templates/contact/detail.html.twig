                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>De :</strong> {{ form.name }}
                    </div>
                    <div class="col-md-6">
                        <strong>Email :</strong>
                        <a href="mailto:{{ form.email }}">{{ form.email }}</a>
                    </div>
                    <div class="col-md-6">
                        <strong>T√©l√©phone :</strong>
                        <a href="tel:{{ form.telephone }}">{{ form.telephone }}</a>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <strong>Date :</strong> {{ message.dateEnvoi|date('d/m/Y √† H:i') }}
                    </div>
                </div>
                <hr>
                <div class="mb-3">
                    <strong>Message :</strong>
                    <div class="mt-2 p-3 bg-light rounded">
                        {{ form.message|nl2br }}
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <a href="{{ path('app_admin_message_marquer_traite', {id: message.id}) }}"
                       class="btn {% if message.traite %}btn-warning{% else %}btn-success{% endif %}">
                        {% if message.traite %}
                            ‚Ü©Ô∏è Marquer comme non trait√©
                        {% else %}
                            ‚úÖ Marquer comme trait√©
                        {% endif %}
