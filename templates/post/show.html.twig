{% extends 'base.html.twig' %}

{% block title %}{{ post.titre }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('app_post_index') }}" class="btn btn-secondary mb-3">
                    <i class="fas fa-arrow-left"></i> Retour aux publications
                </a>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible">
                        {{ message }}
                        <button type="button" class="btn-close"></button>
                    </div>
                {% endfor %}

                {# Post principal #}
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h1 class="card-title">{{ post.titre }}</h1>
                                <small class="text-muted">
                                    Par {{ post.auteurNom }}
                                    • {{ post.dateCreation|date('d/m/Y à H:i') }}
                                    {% if post.dateModification > post.dateCreation %}
                                        • Modifié le {{ post.dateModification|date('d/m/Y à H:i') }}
                                    {% endif %}
                                </small>
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ post.contenu|nl2br }}
                        </div>

                        {# Médias #}
                        {% if post.image %}
                            <div class="mb-3">
                                <img src="{{ asset('uploads/posts/' ~ post.image) }}"
                                     alt="{{ post.titre }}"
                                     class="img-fluid rounded">
                            </div>
                        {% endif %}

                        {% if post.video %}
                            <div class="mb-3">
                                <video controls class="w-100">
                                    <source src="{{ asset('uploads/posts/' ~ post.video) }}">
                                </video>
                            </div>
                        {% endif %}

                        {% if post.audio %}
                            <div class="mb-3">
                                <audio controls class="w-100">
                                    <source src="{{ asset('uploads/posts/' ~ post.audio) }}">
                                </audio>
                            </div>
                        {% endif %}

                        {% if post.pdf %}
                            <div class="mb-3">
                                <a href="{{ asset('uploads/posts/' ~ post.pdf) }}"
                                   class="btn btn-danger"
                                   target="_blank">
                                    <i class="fas fa-file-pdf"></i> Télécharger le PDF
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>

                {# Section commentaires #}
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h3><i class="fas fa-comments"></i> Commentaires</h3>
                    </div>
                    <div class="card-body">
                        {# Formulaire nouveau commentaire #}
                        {% if app.user %}
                            <form action="{{ path('app_post_comment', {id: post.id}) }}" method="post" class="mb-4">
                                <div class="mb-3">
                    <textarea name="contenu"
                              class="form-control comment-textarea"
                              rows="3"
                              placeholder="Écrivez votre commentaire..."
                              maxlength="2900"
                              required></textarea>
                                    <div class="d-flex justify-content-between align-items-center mt-1">
                                        <small class="text-muted">Minimum 2 caractères</small>
                                        <small class="char-counter text-muted">
                                            <span class="current-chars">0</span> / 2900 caractères
                                        </small>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane"></i> Publier le commentaire
                                </button>
                            </form>
                        {% else %}
                            <div class="alert alert-info">
                                Vous devez être connecté pour commenter.
                            </div>
                        {% endif %}

                        <hr>

                        {# Liste des commentaires organisés #}
                        {% set commentairesOrganises = post.commentairesOrganises %}
                        {% if commentairesOrganises is not empty %}
                            <div class="commentaires-list">
                                {% for item in commentairesOrganises %}
                                    {# Bloc pour chaque commentaire parent et ses réponses #}
                                    <div class="commentaire-groupe mb-4">
                                        {{ _self.afficher_commentaire(item.commentaire, post.id, item.reponses, 0) }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted text-center">
                                <i class="fas fa-info-circle"></i>
                                Aucun commentaire pour le moment. Soyez le premier à commenter !
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Macro pour afficher un commentaire et ses réponses récursivement #}
    {% macro afficher_commentaire(commentaire, postId, reponses, niveau) %}
        <div class="commentaire-item {% if niveau > 0 %}ms-4 mt-3{% else %}mb-3{% endif %}" id="commentaire-{{ commentaire.id }}">
            {# Card du commentaire #}
            <div class="card {% if niveau > 0 %}border-start border-primary border-3 bg-light{% else %}shadow-sm{% endif %}">
                <div class="card-body {% if niveau > 0 %}py-2 px-3{% endif %}">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <strong class="{% if niveau > 0 %}text-primary{% endif %}">
                                {{ commentaire.auteurNom }}
                            </strong>
                            {% if niveau > 0 %}
                                <span class="badge bg-primary">
                                    <i class="fas fa-reply"></i>Réponse
                                </span>
                            {% endif %}
                        </div>
                        <small class="text-muted">
                            {{ commentaire.dateCreation|date('d/m/Y à H:i') }}
                        </small>
                    </div>
                    <p class="mb-2">{{ commentaire.contenu|nl2br }}</p>

                    <button class="btn btn-sm btn-outline-primary btn-repondre"
                            data-commentaire-id="{{ commentaire.id }}"
                            data-auteur="{{ commentaire.auteurNom }}">
                        <i class="fas fa-reply"></i> Répondre
                    </button>

                    {# Formulaire de réponse (caché par défaut) #}
                    <form action="{{ path('app_post_comment', {id: postId}) }}"
                          method="post"
                          class="mt-3 formulaire-reponse"
                          id="form-reponse-{{ commentaire.id }}"
                          style="display: none;">
                        <input type="hidden" name="parent_id" value="{{ commentaire.id }}">
                        <div class="mb-2">
                        <textarea name="contenu"
                                  class="form-control form-control-sm comment-textarea"
                                  rows="2"
                                  placeholder="Répondre à {{ commentaire.auteurNom }}..."
                                  maxlength="2900"
                                  required></textarea>
                            <div class="d-flex justify-content-between align-items-center mt-1">
                                <small class="text-muted">Min. 2 caractères</small>
                                <small class="char-counter text-muted">
                                    <span class="current-chars">0</span> / 2900
                                </small>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="fas fa-paper-plane"></i> Envoyer
                        </button>
                        <button type="button" class="btn btn-sm btn-secondary btn-annuler">Annuler</button>
                    </form>
                </div>
            </div>

            {# Conteneur des réponses #}
            {% if reponses is not empty %}
                <div class="reponses-container ps-3">
                    {% for reponse in reponses %}
                        {{ _self.afficher_commentaire(reponse, postId, [], niveau + 1) }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    {% endmacro %}
{% endblock %}
