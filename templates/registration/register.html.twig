{% extends 'base.html.twig' %}

{% block title %}Ecriture de Soie{% endblock %}

{% block body %}
    <a href="{{ path('app_home') }}" class="retour-button">Retour</a>
    <br>
    <div class="container">
        <h1>Inscription</h1>
        <div class="card-connexion">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div>{{ flash_error }}</div>
        {% endfor %}

        {{ form_errors(registrationForm) }}


        <div class="card-body">
            {{ form_start(registrationForm) }}
            <div>
                {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                {{ form_errors(registrationForm.nom) }}
            </div>

            <div>
                {{ form_label(registrationForm.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
                {{ form_errors(registrationForm.prenom) }}
            </div>

            <div>
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'votre@email.com'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

                <div>
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="password-container">
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Minimum 6 caractères',
                                'id': 'plainPassword'
                            }
                        }) }}
                        <button type="button" class="password-toggle">
                            <svg class="eye-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                            <svg class="eye-slash-icon" style="display: none;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                                <line x1="1" y1="1" x2="23" y2="23"></line>
                            </svg>
                        </button>
                    </div>
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <br>

            <button type="submit" class="bouton">Créer mon compte</button>
            {{ form_end(registrationForm) }}

                <br>
            <div>
                <p class="texte">Vous avez déjà un compte ?</p>
                <a href="{{ path('app_login') }}" class="bouton">Se connecter</a>
            </div>
        </div>
    </div>

{% endblock %}
